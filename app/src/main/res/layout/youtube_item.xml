<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_vertical_margin"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:layout_width="@dimen/youtube_thumbnail_width"
        android:layout_height="@dimen/youtube_thumnail_height"
        android:id="@+id/youtube_screenshot"
        android:scaleType="centerCrop"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        />
    <ImageButton
        android:layout_width="@dimen/youtube_play_button_size"
        android:layout_height="@dimen/youtube_play_button_size"
        android:id="@+id/play_button"
        android:background="@drawable/youtube_play"
        android:layout_centerInParent="true"
        />

</RelativeLayout>