<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="@color/white_transparent"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="4dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:transitionName="card"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        >




        <ImageView
            android:id="@+id/movie_cover"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:transitionName="cover"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/movie_cover"
            android:layout_marginTop="12dp"
            android:text=""
            android:maxLines="2"
            android:ellipsize="marquee"
            android:textColor="@color/title_color"
            android:textSize="12sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/duration"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            android:text="--"
            android:textColor="@color/title_color"
            android:textSize="12sp"
            android:textStyle="bold"
            />
        <!--<View-->
            <!--android:id="@+id/separator"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_below="@id/title"-->
            <!--android:layout_marginEnd="40dp"-->
            <!--android:layout_toEndOf="@id/movie_cover"-->
            <!--android:background="@color/title_color" />-->

        <TextView
            android:id="@+id/releaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/movie_cover"
            android:textColor="@color/title_color"
            android:textSize="12sp"
            android:text="" />
        <TextView
            android:id="@+id/genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/releaseDate"
            android:layout_marginTop="8dp"
            android:text="--"
            android:layout_toEndOf="@id/movie_cover"
            android:textColor="@color/title_color"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!--<TextView-->
            <!--android:id="@voteAveragerage"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_marginBottom="20dp"-->
            <!--android:layout_marginEnd="20dp"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:text="22" />-->
        <!--<ImageView-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:src="@drawable/star"-->
            <!--android:layout_toStartOf="voteAveragerage"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_marginEnd="8dp"-->
            <!--android:layout_marginBottom="20dp"-->

            <!--/>-->
        <LinearLayout
            android:id="@+id/rating_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/genre"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/movie_cover"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="0.5"
                android:src="@drawable/star" />

            <TextView
                android:id="@+id/main_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="--"
                android:textColor="@color/title_color"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="0.5"
                android:src="@drawable/rotten" />

            <TextView
                android:id="@+id/tomatoes_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="--"
                android:textColor="@color/title_color"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="0.5"
                android:src="@drawable/imdb" />

            <TextView
                android:id="@+id/imdb_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="--"
                android:textColor="@color/title_color"
                android:textSize="12sp"
                android:textStyle="bold" />


        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
