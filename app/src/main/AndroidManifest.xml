<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.co.sszymanski.cinema">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="uk.co.sszymanski.cinema.GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="uk.co.sszymanski.cinema.MainActivity"
            android:configChanges="orientation|screenSize"
            >

        </activity>
        <activity android:name="uk.co.sszymanski.cinema.SplashActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="uk.co.sszymanski.cinema.DetailActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
    </application>

</manifest>